.people
	text-align center
	
.people .person
	display: inline-table
	width: 28%;
	text-align justify
	margin: 25px
	
.people .person .personimg
	width: 150px;
	height: 150px;
	border-radius: 100%;
	box-shadow: 0px 0px 5px 1px black inset;
	margin: 0px auto;
	transition 0.2s all
	&:hover
		background-size 100% !important
		background-position 0 0 !important
	

.people .person .persontitle
	text-align center
	font-family: Arvo;
	font-size: 18px;
	padding: 5px;
	
.people .person .persondesc
	font-family: Roboto;
	
@media screen and (max-width : 650px)
	.people .person
		width 82%
